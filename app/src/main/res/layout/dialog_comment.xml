<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="THÔNG TIN NGƯỜI GỬI" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Tên (Bắt buộc)"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/button_custom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginEnd="10dp"
        android:padding="12dp"
        android:background="@drawable/button_custom2"
        android:hint="Email (Để nhận phản hồi qua email)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="12dp"
        android:background="@drawable/button_custom2"
        android:hint="Số điện thoại (Để nhận phản hồi qua zalo)"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_emty_comment"
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/red"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="17sp"
        android:text="Gửi bình luận"
        android:textColor="@color/white"
        android:background="@drawable/button_custom4" />


</LinearLayout>