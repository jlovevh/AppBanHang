<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="300dp">

   <FrameLayout
       android:layout_width="150dp"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tv_status_laptop"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Trả góp 0%"
           android:layout_marginTop="8dp"
           android:padding="5dp"
           android:layout_marginLeft="5dp"
           android:background="@color/redPhone"
           android:textColor="@color/white"/>
       <ImageView
           android:id="@+id/img_laptop"
           android:layout_width="match_parent"
           android:src="@drawable/iu"
           android:padding="10dp"
           android:layout_gravity="center"
           android:layout_height="150dp" />
   </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
        
        <TextView
            android:id="@+id/tv_name_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Macbook 12 256GB (2017)"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_price_laptop"
            android:layout_width="match_parent"
            android:text="33.999.000đ"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>
        <TextView
            android:id="@+id/tv_manhinh_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="Màn hình: 12 inch, 2304 x 1440 Pixels"/>
        <TextView
            android:id="@+id/tv_cpu_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="CPU :	Intel, Core M3"/>
        <TextView
            android:id="@+id/tv_ram_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="RAM :	8 GB, LPDDR3"/>
        <TextView
            android:id="@+id/tv_vga_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="VGA :	Intel HD Graphics 615"/>
        <TextView
            android:id="@+id/tv_hdh_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="HĐH :	Mac Os"/>
        <TextView
            android:id="@+id/tv_tl_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="Nặng:	0.92 kg"/>

    </LinearLayout>



</LinearLayout>