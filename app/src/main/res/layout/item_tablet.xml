<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_status_tablet"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@color/redPhone"
            android:text="@string/tg"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/img_tablet"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/iu" />

        <TextView
            android:id="@+id/tv_name_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dt"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gia_lap_top" />


    </LinearLayout>

</android.support.v7.widget.CardView>