<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <ImageView
            android:contentDescription="@string/image"
            android:id="@+id/img_laptop_new"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:src="@drawable/iu" />

        <TextView
            android:id="@+id/tv_status_laptop_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/holo_orange_dark"
            android:padding="3dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:text="@string/tg"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tv_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/laptop_button_custom"
                android:layout_marginStart="10dp"
                android:text="RAM 4GB" />

            <TextView
                android:id="@+id/tv_ocung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/laptop_button_custom"
                android:layout_marginStart="10dp"
                android:text="Ổ CỨNG 500GB" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_name_laptop_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="@string/dt"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_price_laptop_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginStart="10dp"
            android:text="@string/gia_lap_top" />


    </LinearLayout>

</android.support.v7.widget.CardView>