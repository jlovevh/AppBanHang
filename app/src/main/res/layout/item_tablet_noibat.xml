<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="260dp">

    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_status_tablet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/redPhone"
            android:text="@string/tg"
            android:fontFamily="sans-serif"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_tablet"
            android:layout_width="120dp"

            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/image"
            android:src="@drawable/iu" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_name_tablet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:fontFamily="sans-serif"
                android:text="@string/dt"

                android:textColor="@color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_price_tablet"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:text="@string/gia_lap_top"
            android:textColor="#ff3d11" />


    </LinearLayout>

</android.support.v7.widget.CardView>